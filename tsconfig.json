{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "noImplicitThis": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
  ]
}
